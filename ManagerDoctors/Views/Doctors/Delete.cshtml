@model ManagerDoctors.Data.Doctor

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Doctor</h4>
    <hr />
    <div class="container">
        <dl class="row">
            <dt class="col-sm-3 offset-3">
                @Html.DisplayNameFor(model => model.FullName)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.FullName)
            </dd>
            <dt class="col-sm-3 offset-3">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class="col-sm-3 offset-3">
                @Html.DisplayNameFor(model => model.Date)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.Date)
            </dd>
            <dt class="col-sm-3 offset-3">
                @Html.DisplayNameFor(model => model.Gender)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.Gender)
            </dd>
            <dt class="col-sm-3 offset-3">
                @Html.DisplayNameFor(model => model.Phone)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.Phone)
            </dd>
            <dt class="col-sm-3 offset-3">
                @Html.DisplayNameFor(model => model.Address)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.Address)
            </dd>
            <dt class="col-sm-3 offset-3">
                @Html.DisplayNameFor(model => model.Avatar)
            </dt>
            <dd class="col-sm-6">
                @if (!string.IsNullOrEmpty(Model.Avatar))
                {
                    <div class="form-group">
                        <label>Avatar upload</label>
                        <div>
                            <img src="@Url.Content($"~/{Model.Avatar}")" alt="Avatar" class="img-thumbnail" style="max-width: 100px;" />
                        </div>
                    </div>
                }
                else
                {
                    <p>No profile picture yet</p>
                }
            </dd>
        </dl>
		<form asp-action="Delete">
        <div class="form-group d-flex justify-content-end mt-1">
		<input type="hidden" asp-for="Id" />
            <a asp-action="Index" class="btn btn-warning me-2">Cancel</a>
        <input type="submit" value="Delete" class="btn btn-danger" />
         </div>
    </form>
</div> </div>
