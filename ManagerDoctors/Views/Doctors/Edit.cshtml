@model ManagerDoctors.Data.Doctor

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Doctor</h4>
<hr />
<div class="container row justify-content-center">
    <div class="col-md-8">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="FullName" class="control-label required"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="form-group col">
                    <label asp-for="Id" class="control-label required"></label>
                    <input asp-for="Id" class="form-control" />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>

                <div class="form-group col">
                    <label asp-for="Email" class="control-label required"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col">
                    <label asp-for="Date" class="control-label required"></label>
                    <input asp-for="Date" class="form-control" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
                <div class="form-group col">
                    <label asp-for="Gender" class="control-label required"></label>
                    <select asp-for="Gender" class="form-control">
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                    </select>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
                <div class="form-group col">
                    <label asp-for="Phone" class="control-label required"></label>
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label required"></label>
                <textarea asp-for="Address" class="form-control"></textarea>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            @if (!string.IsNullOrEmpty(Model.Avatar))
            {
                <div class="form-group">
                    <label>Avatar upload</label>
                    <div>
                        <img src="@Url.Content($"~/{Model.Avatar}")" alt="Avatar" class="img-thumbnail" style="max-width: 100px;" />
                    </div>
                </div>
            }
            <div class="form-group">
                <label class="form-label" name="uploadAvatar"></label>
                <input type="file" class="form-control" name="uploadAvatar" accept="image/*" />
            </div>
            <div class="form-group d-flex justify-content-end mt-1">
                <a asp-action="Index" class="btn btn-danger me-2">Cancel</a>
                <button type="submit" class="btn btn-primary"></i>Save Changes</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
